import discord
from discord.ext import commands
import random
import os

intents = discord.Intents.all()

class Dropdown(discord.ui.Select):
    def __init__(self):

        options = [
            discord.SelectOption(label='KÄ±rmÄ±zÄ±', description='En sevdiÄŸin renk kÄ±rmÄ±zÄ±', emoji='ğŸŸ¥'),
            discord.SelectOption(label='Turuncu', description='En sevdiÄŸin renk turuncu', emoji='ğŸŸ§'),
            discord.SelectOption(label='SarÄ±', description='En sevdiÄŸin renk sarÄ±', emoji='ğŸŸ¨'),
            discord.SelectOption(label='YeÅŸil', description='En sevdiÄŸin renk yeÅŸil', emoji='ğŸŸ©'),
            discord.SelectOption(label='Mavi', description='En sevdiÄŸin renk mavi', emoji='ğŸŸ¦'),
            discord.SelectOption(label='Mor', description='En sevdiÄŸin renk mor', emoji='ğŸŸª'),
            discord.SelectOption(label='Siyah', description='En sevdiÄŸin renk siyah', emoji='â¬›'),
        ]


        super().__init__(placeholder='En sevdiÄŸiniz renk...', min_values=1, max_values=1, options=options)

    async def callback(self, interaction: discord.Interaction):
        await interaction.response.send_message(f'Senin en sevdiÄŸin renk {self.values[0]}')


class DropdownView(discord.ui.View):
    def __init__(self):
        super().__init__()

        self.add_item(Dropdown())


class Bot(commands.Bot):
    def __init__(self):
        intents = discord.Intents.default()
        intents.message_content = True

        super().__init__(command_prefix=commands.when_mentioned_or('!'), intents=intents)


bot = Bot()


@bot.command()
async def renk(ctx):

    view = DropdownView()

    await ctx.send('En sevdiÄŸiniz rengi seÃ§in:', view=view)


#Bot HazÄ±r
@bot.event
async def on_ready():
    print(f"{bot.user}'a giriÅŸ yaptÄ±k.")
    print("Botunuz Online!")



#Sadece benim kullanabilmemi saÄŸlayan kod:
def sadece_ben():
    def predicate(ctx):
        return ctx.message.author.id == 895025358586408981
    return commands.check(predicate)

#Kick Komutu
@bot.command()
@sadece_ben()
@commands.has_permissions(kick_members=True)
async def kick(ctx, user: discord.Member, *, reason="Sebep yok.."):
    try:
            await user.kick(reason=reason)
            embed = discord.Embed(color=discord.Colour.red(), title="", description="")
            embed.add_field(name="Kicked", value=f"""
**{user}** kullanÄ±cÄ±sÄ± sunucudan atÄ±ldÄ±.
Sebep = **{reason}**
""", inline=True)
            await ctx.send(embed=embed)
    except:
            embed = discord.Embed(color=discord.Colour.red(), title="", description="")
            embed.add_field(name="Kicked", value=f"""
Error
""", inline=True)



@bot.command()
async def merhaba(ctx, to: discord.User = commands.parameter(default=lambda ctx: ctx.author)):
    await ctx.send(f'Merhaba {to.mention} :wave:')


@bot.command()
async def bye(ctx, count_heh = 5):
    await ctx.send("he" * count_heh)


